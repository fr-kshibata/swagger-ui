{
  "swagger": "2.0",
  "info": {
    "version": "v1",
    "title": "Catalog Component",
    "description": "http://itwiki.g1.frgroup/display/DM/Catalog+Platform",
    "contact": {
      "name": "Catalog PF Team",
      "url": "http://itwiki.g1.frgroup/display/DM/Catalog+Platform",
      "email": "kristian.faeldt@fastretailing.com,wenyuan.jiang@fastretailing.com"
    }
  },
  "host": "stage-api.fastretailing.com",
  "basePath": "/catalog",
  "schemes": ["https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "parameters": {
    "brand":
    {
      "name": "brand",
      "in": "path",
      "description": "Brand",
      "type": "string",
      "required": true,
      "default": "uq",
      "enum": [
        "uq",
        "gu"
      ]
    },
    "region":
    {
      "name": "region",
      "in": "path",
      "description": "Region",
      "type": "string",
      "required": true,
      "default": "jp",
      "enum": [
        "jp"
      ]
    },
    "clientid": {
      "name": "clientID",
      "in": "query",
      "description": "Client ID",
      "type": "string",
      "required": true,
      "default": "mobileweb"
    },
    "locale": {
      "in": "query",
      "name": "locale",
      "description": "Locale",
      "type": "string",
      "required": false,
      "default": "ja"
    },
    "count": {
      "in": "query",
      "name": "count",
      "description": "Limit (1-50, 10 if not specified)",
      "type": "integer",
      "required": false,
      "format": "int32"
    },
    "start": {
      "in": "query",
      "name": "start",
      "description": "Initial offset (<= 1000)",
      "type": "integer",
      "required": false,
      "format": "int32"
    },
    "q": {
      "in": "query",
      "name": "q",
      "description": "Full-text search query",
      "type": "string",
      "required": false
    }
  },
  "paths": {
    "/v1/{brand}/{region}/item/detail": {
      "get": {
        "responses": {
          "200": {
            "description": "Item details"
          }
        },
        "parameters": [
          {
            "$ref": "#/parameters/brand"
          },
          {
            "$ref": "#/parameters/region"
          },
          {
            "$ref": "#/parameters/clientid"
          },
          {
            "$ref": "#/parameters/locale"
          },
          {
            "in": "query",
            "name": "productID",
            "description": "L1 Code",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "onlineID",
            "description": "PUB Code",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "sku",
            "description": "SKU",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "plu",
            "description": "PLU",
            "type": "string",
            "required": false
          }
        ]
      }
    },
    "/v1/{brand}/{region}/item/list": {
      "get": {
        "responses": {
          "200": {
            "description": "Item list"
          }
        },
        "parameters": [
          {
            "$ref": "#/parameters/brand"
          },
          {
            "$ref": "#/parameters/region"
          },
          {
            "$ref": "#/parameters/clientid"
          },
          {
            "$ref": "#/parameters/locale"
          },
          {
            "$ref": "#/parameters/start"
          },
          {
            "$ref": "#/parameters/count"
          },
          {
            "in": "query",
            "name": "productID",
            "description": "L1 Code(s)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "onlineID",
            "description": "PUB Code(s)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "sku",
            "description": "SKU(s)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "plu",
            "description": "PLU(s)",
            "type": "string",
            "required": false
          }
        ]
      }
    },
    "/v1/{brand}/{region}/item/search": {
      "get": {
        "responses": {
          "200": {
            "description": "Search results"
          }
        },
        "parameters": [
          {
            "$ref": "#/parameters/brand"
          },
          {
            "$ref": "#/parameters/region"
          },
          {
            "$ref": "#/parameters/clientid"
          },
          {
            "$ref": "#/parameters/locale"
          },
          {
            "$ref": "#/parameters/start"
          },
          {
            "$ref": "#/parameters/count"
          },
          {
            "$ref": "#/parameters/q"
          },
          {
            "in": "query",
            "name": "sort",
            "description": "Sort Field",
            "type": "string",
            "required": false,
            "enum": [
              "online",
              "score",
              "price",
              "salesStart"
            ]
          },
          {
            "in": "query",
            "name": "order",
            "description": "Sort Order",
            "type": "string",
            "required": false,
            "enum": [
              "asc",
              "desc"
            ]
          },
          {
            "in": "query",
            "name": "color",
            "description": "Color(s)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "colorCode",
            "description": "Color code(s)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "size",
            "description": "Size(s)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "sizeCode",
            "description": "Size code(s)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "length",
            "description": "Length(s)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "lengthCode",
            "description": "Length code(s)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "since",
            "description": "Items with salesStart >= value (YYYY-MM-DD)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "category",
            "description": "3-letter IMS category(ies)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "onlineCategory",
            "description": "EC System Category(ies)",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "inStock",
            "description": "Only return products that are in stock",
            "type": "boolean",
            "required": false
          },
          {
            "in": "query",
            "name": "fuzzy",
            "description": "Enable fuzzy search",
            "type": "boolean",
            "required": false
          }
        ]
      }
    },
    "/v1/{brand}/{region}/review/search": {
      "get": {
        "responses": {
          "200": {
            "description": "Search results"
          }
        },
        "parameters": [
          {
            "$ref": "#/parameters/brand"
          },
          {
            "$ref": "#/parameters/region"
          },
          {
            "$ref": "#/parameters/clientid"
          },
          {
            "$ref": "#/parameters/locale"
          },
          {
            "$ref": "#/parameters/start"
          },
          {
            "$ref": "#/parameters/count"
          },
          {
            "$ref": "#/parameters/q"
          },
          {
            "in": "query",
            "name": "sort",
            "description": "Sort Field",
            "type": "string",
            "required": false,
            "enum": [
              "createdAt",
              "score"
            ]
          },
          {
            "in": "query",
            "name": "productID",
            "description": "L1 Code",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "onlineID",
            "description": "PUB Code",
            "type": "string",
            "required": false
          }
        ]
      }
    }
  }
}
